<Window
    x:Class="FfmpegVideoMerger.UI.Main.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localizations="clr-namespace:FfmpegVideoMerger.Resources.Localizations"
    xmlns:main="clr-namespace:FfmpegVideoMerger.UI.Main"
    mc:Ignorable="d"
    Title="MainWindow"
    MinHeight="400"
    MinWidth="500"
    WindowStartupLocation="CenterScreen"
    d:DataContext="{d:DesignInstance main:MainViewModel}">

    <TabControl>
        <TabItem
            Header="{x:Static localizations:StringResources.SingleFile}">
            
            <Frame Source="SingleFile/SingleFilePage.xaml"/>
        </TabItem>

        <TabItem
            Header="{x:Static localizations:StringResources.MultipleFiles}">

            <Frame Source="MultipleFiles/MultipleFilesPage.xaml"/>
        </TabItem>
        
        <TabItem
            Header="{x:Static localizations:StringResources.Settings}">

            <Frame Source="Settings/SettingsPage.xaml"/>
        </TabItem>
    </TabControl>
</Window>